{
  "name": "express-es6-starter",
  "version": "0.1.0",
  "description": "Seed project for easily getting started with express for es6",
  "scripts": {
    "start": "nodemon ./server.js --exec babel-node",
    "build": "babel . -d dist --presets es2015,stage-2 --ignore spec.js,node_modules",
    "serve": "node dist/server.js",
    "start_babel": "babel-node ./server.js --preset=babel-preset-es2015",
    "test": "nodemon --exec 'mocha --compilers js:babel-core/register -R min' ",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomyitav/express-es6-starter.git"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "Express"
  ],
  "author": "Tom Yitav <tomyitav@gmail.com>",
  "dependencies": {
    "body-parser": "^1.15.2",
    "chai": "^4.1.2",
    "cors": "^2.8.0",
    "express": "4.14.0",
    "faker": "^4.1.0",
    "lodash": "^4.15.0",
    "mongoose": "^4.8.6",
    "morgan": "^1.8.2",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-react": "^7.10.0",
    "nodemon": "^1.9.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "env": {
      "mocha": true
    }
  }
}
